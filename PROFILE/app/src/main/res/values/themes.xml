<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="button_color">
        <item name="android:backgroundTint">@color/cream_calm</item>
        <item name="android:textColor">@color/superdark_green</item>
    </style>

    <style name="Background_color">
        <item name="android:background">@color/cream</item>
        <item name="android:foregroundTint">@color/cream</item>
        <item name="android:foregroundTintMode">add</item>
    </style>

    <style name="shapeImageView">
        <item name="cornerSize">50%</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="title_fix">
        <item name="android:textColor">@color/dark_565656</item>
        <item name="android:textSize">20.sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">"sans-serif-medium"</item>
    </style>

    <style name="username">
        <item name="android:textColor">@color/dark_777777</item>
        <item name="android:textSize">20.sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:opacity">translucent</item>
        <item name="fontFamily">"sans-serif-medium"</item>
    </style>

    <style name="description">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:foregroundTintMode">add</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_777777</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>